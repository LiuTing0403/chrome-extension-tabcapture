{
    "name" : "Tab Capturing",
    "author": "Ting Liu",
    "version" : "1.0",
    "manifest_version" : 2,
    "description" : "Capture Tab and audio",
    "homepage_url": "https://github.com/LiuTing0403/chrome-extension-tabcapture",
    "background": {
        "scripts": ["background.js"],
		"persistent": false
    },
    "content_scripts": [ {
        "js": [ "content-script.js"],
        "all_frames": true,
        "run_at": "document_end",
        "matches": ["https://*/*"]
    }],
    "permissions": [
        "https://*/*", "desktopCapture"
    ],
	"icons" : {
        "48" : "icon.png"
	},
	"web_accessible_resources": [
        "icon.png"
	]
}
